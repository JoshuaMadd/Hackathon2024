            tools:text="Stuvo" />-->


    <TextView
            android:id="@+id/uitroepteken"
            android:layout_width="19dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="7dp"
            android:text="@string/uitroepteken"
            android:textSize="22sp"
            android:textStyle="bold"
            android:visibility="invisible" />

    <TextView
            android:id="@+id/onderwerp"
            android:layout_width="217dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/creatieTijd"
            android:layout_toEndOf="@+id/categoryIcon"
            android:maxLines="2"
            android:singleLine="false"
            android:textSize="20sp"
            tools:text="Stuvo competities" />

    <TextView
            android:id="@+id/beschrijving"
            android:layout_width="284dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/onderwerp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="21dp"
            android:layout_toStartOf="@+id/uitroepteken"
            android:layout_toEndOf="@+id/categoryIcon"
            android:maxLines="2"
            android:padding="5sp"
            android:singleLine="false"
            android:textSize="12sp"
            tools:text="Ik stuur jullie over het feit dat ik een goede ..." />

    <TextView
            android:id="@+id/creatieTijd"
            android:gravity="right"
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="3dp"
            android:layout_weight="1"
            android:textSize="12sp"
            tools:text="3:14 PM" />

</RelativeLayout>