<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="be.vives.vivesplus.screens.select.FieldOfStudyFragment">

        <androidx.recyclerview.widget.RecyclerView
                android:scrollbarThumbVertical="@drawable/recyclerview_scrollbar"
                android:scrollbars="vertical"
                android:id="@+id/studiegebiedList"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

        <androidx.recyclerview.widget.RecyclerView
                android:scrollbarThumbVertical="@drawable/recyclerview_scrollbar"
                android:scrollbars="vertical"
                android:id="@+id/campusList"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />

        <ProgressBar
                android:id="@+id/indicator"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/studynofound"
                android:visibility="gone"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/geen_studiegebieden_gevonden"/>

        <TextView
                android:id="@+id/campusnofound"
                android:visibility="gone"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/geen_campussen_gevonden"/>



    </RelativeLayout>


</layout>
